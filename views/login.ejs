<%- include('partials/header') %>

<div class="max-w-sm mx-auto mt-20 bg-white border-4 border-black shadow-[8px_8px_0_0_black] p-6 rounded-lg">
    <h2 class="text-3xl font-extrabold mb-4 text-[#003087] border-b-4 border-black pb-2">Admin Login</h2>

    <% if (typeof error !== 'undefined') { %>
    <div class="bg-red-100 border-4 border-black text-red-700 px-4 py-3 rounded mb-4 shadow-[4px_4px_0_0_black]">
        <%= error %>
    </div>
    <% } %>

    <form action="/login" method="POST">
        <div class="mb-4">
            <label for="username" class="block text-sm font-extrabold mb-2">Username</label>
            <input type="text" id="username" name="username" class="w-full border-4 border-black rounded-md px-3 py-2 focus:outline-none focus:ring-4 focus:ring-[#003087] transition" required>
        </div>
        <div class="mb-4">
            <label for="password" class="block text-sm font-extrabold mb-2">Password</label>
            <input type="password" id="password" name="password" class="w-full border-4 border-black rounded-md px-3 py-2 focus:outline-none focus:ring-4 focus:ring-[#003087] transition" required>
        </div>
        <button type="submit" class="bg-[#003087] text-white font-extrabold border-4 border-black rounded-md py-2 w-full shadow-[4px_4px_0_0_black] hover:bg-[#002170] transition">
            Login
        </button>
    </form>
</div>

<%- include('partials/footer') %>